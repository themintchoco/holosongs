{
  "manifest_version": 3,
  "name": "HoloSongs",

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "alarms",
    "storage"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*"
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": ["*.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}